<div class="container mt-4">
  <div class="category-total-cost">
    <h3 class="total-title">Total cost for all categories</h3>
    <h3 class="total-cost">$<%= @expenses.sum(:amount) %></h3>
  </div>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-body d-flex align-items-center">
            <div class="col-4">
              <%= link_to category_path(category), class: "category-link d-flex align-items-center" do %>
                <%= image_tag category.icon, class: "category-img", alt: "#{category.name} icon" %>
                <div class="name-expense ms-3">
                  <h3 class="card-title"><%= category.name %></h3>
                  <p class="card-text category-date"><%= category.created_at.strftime('%d %b, %Y') %></p>
                </div>
              <% end %>
            </div>
            <div class="col-8 text-end">
              <div class="amount-del-div ms-auto">
                <p class="card-text amount">$<%= category.expenses.sum(:amount) %></p>
                <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', title: 'Delete Category' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="add-category-div text-center mt-4">
    <%= link_to "Add a new category", new_category_path, class: "add-category-button" %>
  </div>
</div>
