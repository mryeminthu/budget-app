<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @category, html: { class: 'custom-form' } do |form| %>
        <div class="form-group mb-3">
          <%= form.text_field :name, class: 'form-control', required: true, placeholder: 'Category Name' %>
        </div>
        <div class="form-group mb-3">
          <%= form.file_field :icon, class: 'form-control', required: true %>
        </div>
        <%= form.submit(value: 'Save', class: 'submit-category-btn') %>
      <% end %>
    </div>
  </div>
</div>
