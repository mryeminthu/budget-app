<div class="category-total-cost">
  <h3 class="total-title">Total cost for this category</h3>
  <h3 class="total-expense">$<%= @category_expenses&.sum(:amount) || 0 %></h3>
</div>
<hr>

<div class="card">
  <div class="card-body">
    <div class="category-new">
      <% if @category_expenses.present? %>
        <% @category_expenses.each do |expense| %>
          <div class="card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div class="expense-name-time">
                <h2 class="card-title"><%= expense.name %></h2>
                <p class="card-text"><%= "#{expense.created_at.strftime('%d %b, %Y')}" %></p>
              </div>
              <h5 class="card-text">$<%= expense.amount %></h5>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="card-text">No expenses found for this category.</p>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Add a new transaction", new_category_expense_path(@category), class: "add-transaction-button" %>
</div>