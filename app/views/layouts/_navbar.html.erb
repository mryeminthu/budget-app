      <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row align-items-center justify-content-between">
        <% unless current_page?(root_path) %>
          <li class="nav-item me-2">
            <% if current_page?(new_category_path) %>
              <%= link_to root_path, class: "navbar-brand d-lg-block" do %>
                <%= image_tag(image_path("arrow-left.svg"), alt: "Back", class: "back-arrow") %>
              <% end %>
            <% elsif current_page?(categories_path) %>
              <%= link_to categories_path, class: "navbar-brand d-lg-block" do %>
                <%= image_tag(image_path("arrow-left.svg"), alt: "Back", class: "back-arrow") %>
              <% end %>
            <% elsif defined?(@category) && current_page?(new_category_expense_path(@category)) %>
