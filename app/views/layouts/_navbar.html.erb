                <%= image_tag(image_path("arrow-left.svg"), alt: "Back", class: "back-arrow") %>
              <% end %>
            <% else %>
              <%= link_to root_path, class: "navbar-brand d-lg-block" do %>
                <%= image_tag(image_path("arrow-left.svg"), alt: "Back", class: "back-arrow") %>
              <% end %>
            <% end %>
          </li>
        <% end %>
        
        <% if current_page?(root_path) %>
          <li class="nav-item me-2">
            <span class="nav-link">Category</span>
          </li>
